<div class="pta-sheet-body flexcol">
    <div class="flexrow pta-id-card pta-actor-sheet-header pta-sheet-header sheet-header">
        <img class="flex0" title="{{document.type}} " data-action="editImage" height="150" src="{{document.img}}">
        {{!-- Header fields --}}
        <div class="flexrow flex-align-start flex-gap-m">
            {{!-- Header fields --}}
            <div class="flexcol flex-gap-s">
                <input class="pta-font-l" type="text" value="{{document.name}}" name="name">
                {{systemFieldGroup system 'rank'}}
                {{systemFieldGroup system 'origin'}}
                <div class="progress-bar">
                    <label>Health</label>
                    <div class="wrapper">
                        <div class="bar {{#if (lt (divide system.hp.value system.hp.total) 0.33)}}red{{else}}green{{/if}}" style="width: {{multiply 100 (divide system.hp.value system.hp.total)}}%;">
                        </div>
                        <div class="pta-s flexrow">
                            {{systemFieldInput system 'hp.value'}}
                            /
                            {{#if isEditMode}}
                                {{systemFieldInput system 'hp.max'}}
                            {{else}}
                                <div class="text-center">{{system.hp.total}}</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{!-- Character classes --}}
            <div class="pta-level flexcol flex-gap-s flex-align-start">
                <div class="flexrow flex-gap-s">
                    <input class="flex0" style="min-width: 2rem;" type="number" disabled value="{{system.category_1.level}}">
                    <input type="text" name="system.category_1.label" value="{{system.category_1.label}}" placeholder="First Class">
                </div>
                <div class="flexrow flex-gap-s">
                    <input class="flex0" style="min-width: 2rem;" type="number" disabled value="{{system.category_2.level}}">
                    <input type="text" name="system.category_2.label" value="{{system.category_2.label}}" placeholder="Second Class">
                </div>
                <div class="flexrow flex-gap-s">
                    <input class="flex0" style="min-width: 2rem;" type="number" disabled value="{{system.category_3.level}}">
                    <input type="text" name="system.category_3.label" value="{{system.category_3.label}}" placeholder="Third Class">
                </div>
                <div class="flexrow flex-gap-s">
                    <input class="flex0" style="min-width: 2rem;" type="number" disabled value="{{system.category_4.level}}">
                    <input type="text" name="system.category_4.label" value="{{system.category_4.label}}" placeholder="Fourth Class">
                </div>
            </div>
        </div>
    </div>
    {{> "pta.tabs-content"}}
</div>