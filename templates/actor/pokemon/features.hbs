{{#*inline 'pokemon-move'}}
    {{#if (eq item.type 'move')}}
        <li class="item flexrow" data-item-uuid="{{item.uuid}}" data-uuid="{{item.uuid}}" draggable="true">
            <div class="item-name">
                <div class="item-image">
                    <a data-action="itemUse">
                        <img src="{{item.img}}" title="{{item.name}}">
                    </a>
                </div>
                <div>{{item.name}}</div>
            </div>
            {{#if (gt item.system.uses.max 0)}}
                <div>Uses [{{item.system.uses.value}}/{{item.system.uses.max}}]</div>
            {{/if}}
            <div class="item-controls">
                {{log item}}
                {{#if (not (eq item.system.uses.max item.system.uses.value))}}
                    <a class="item-control" data-action="itemUse" data-use="reload" title="Reset Uses">
                        <i class="fas fa-arrows-rotate"></i>
                    </a>
                {{/if}}
                <a class="item-control" data-action="itemEdit" title="Edit">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="item-control" data-action="itemDelete" title="Update undefined">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </li>
    {{/if}}
{{/inline}}

<div class="flexrow align-left">
    <div class="flex0">
        <div data-application-part="abilities"></div>
    </div>
    <div style="align-self: flex-start;">
        <div class="flexrow flex-gap-l">
            <div><b>Resistance Overides <a data-action="editResistance"><i class="fas fa-cog"></i></a></b></div>
            <div><b>Import Moves <a data-action="importMoves"><i class="fas fa-cog"></i></a></b></div>
        </div>
        <span class="items-header flexrow">
            <span class="item-name">Moves</span>
            <span>Controls</span>
        </span>
        <ol class="pta-move-list items-list">
            {{#each items as | item key |}}
                {{> 'pokemon-move' item=item}}
            {{/each}}
        </ol>
    </div>
</div>