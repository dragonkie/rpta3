<div>
    <ol class="pta-pc-layout-list items-list">
        {{#each pokemon as | pokemon key |}}
            {{!-- List standard pokemon --}}
            {{#if (and (not pokemon.active) (not pokemon.missing))}}
                <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}" data-uuid="{{pokemon.uuid}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a data-action="edit">
                                <img src="{{pokemon.img}}" title="{{pokemon.name}}">
                            </a>
                        </div>
                        <div>{{pokemon.name}}</div>
                    </div>
                    <div class="item-controls">
                        <a class="item-control" data-action="edit" title="PTA.TitleHint.edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="item-control" data-action="pokemonBox" title="PTA.TitleHint.Box">
                            <i class="fas fa-box-open"></i>
                        </a>
                        <a class="item-control" data-action="pokemonRemove" title="PTA.TitleHint.Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/if}}
            {{!-- List out pokemon with damaged links --}}
            {{#if pokemon.missing}}
                <li class="item flexrow" data-pokemon-uuid="{{pokemon.uuid}}" data-uuid="{{pokemon.uuid}}">
                    <div class="item-name">
                        <i class="fas fa-link-slash"></i>
                        <div>{{pokemon.name}}</div>
                    </div>
                    <div class="item-controls">
                        <a class="item-control" data-action="pokemonRemove" title="PTA.TitleHint.Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/if}}
        {{/each}}
    </ol>
</div>